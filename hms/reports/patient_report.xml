<odoo>
    <record id="patient_print" model="ir.actions.report">
        <field name="name">Patient Report</field>
        <field name="model">hms.patient</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">hms.patient_report</field>
        <field name="report_file">hms.patient_report</field>
        <field name="print_report_name">'Patient Report'</field>
        <field name="binding_model_id" ref="hms.model_hms_patient"/>
        <field name="binding_type">report</field>
    </record>
    <template id="hms.patient_report">
        <style>
        .table-container table {
            border: none;
        }

        .table-container td {
            border: none;
        }

        .table-container th {
            border: none;
        }

</style>
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="d-flex justify-content-end">
                        <p t-field="o.image" class="me-5" t-options='{"widget": "image" ,"style":"width: 150px;height: 150px"}'/>
                    </div>
                    <div>
                        <h1 class="text-danger mb-3">Patient Status Report</h1>
                    </div>
                    <div class="row mb-5">
                        <div class="col-9">
                            <div class="table-container">
                                <table class="table">
                                    <tr>
                                        <td><b>Name:</b> <span t-field="o.first_name"/><span t-field="o.last_name"/> </td>
                                    </tr>
                                    <tr>
                                        <td><b>Age:</b> <span t-field="o.age"/></td>
                                    </tr>
                                    <tr>
                                        <td><b>Department:</b> <span t-field="o.department_id"/></td>
                                    </tr>
                                    <tr>
                                        <td><b>Doctors:</b> <span t-field="o.doctor_id"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="table-container">
                                <table class="table">
                                    <tr>
                                        <td><b>Birth date:</b> <span t-field="o.birth_date"/></td>
                                    </tr>
                                    <tr>
                                        <td><b>Pcr:</b> <span t-field="o.pcr"/></td>
                                    </tr>
                                    <tr>
                                        <td><b>Blood Type:</b> <span t-field="o.blood_type"/></td>
                                    </tr>
                                    <tr>
                                        <td><b>Email:</b> <span t-field="o.email"/></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="text-center">
                        <h4 style="color: red;">Log History</h4>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead class="bg-primary text-white">
                                <tr>
                                    <th>Date</th>
                                    <th>Created_by</th>
                                    <th class="text-center">Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr t-foreach="o.log" t-as="line" class="table-secondary text-dark">
                                    <td><span t-field="line.date"/></td>
                                    <td><span t-field="line.created_by"/></td>
                                    <td><span t-field="line.description"/></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>
