<odoo>
    <record id="view_department_form" model="ir.ui.view">
        <field name="name">hms.department.form</field>
        <field name="model">hms.department</field>
        <field name="arch" type="xml">
            <form string="Department">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="capacity"/>
                        <field name="is_opened"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_department_tree" model="ir.ui.view">
        <field name="name">hms.department.tree</field>
        <field name="model">hms.department</field>
        <field name="arch" type="xml">
            <tree string="Departments">
                <field name="name"/>
                <field name="capacity"/>
                <field name="is_opened"/>
            </tree>
        </field>
    </record>

    <record id="view_department_kanban" model="ir.ui.view">
    <field name="name">hms.department.kanban.view</field>
    <field name="model">hms.department</field>
    <field name="arch" type="xml">
        <kanban>
            <field name="name"/>
            <field name="capacity"/>
            <field name="is_opened"/>
            <field name="available_capacity"/>
            <templates>
                <t t-name="kanban-box">
                    <div class="oe_kanban_card shadow p-3 mb-5 bg-white rounded text-center">
                        <div class="oe_kanban_card_header">
                            <div class="oe_kanban_card_header_title">
                                <h3 t-esc="record.name.value"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong>
                                        <ul>
                                            <li class="text-success text-left" t-if="record.is_opened.raw_value">Opened</li>
                                            <li class="text-danger text-left" t-if="!record.is_opened.raw_value">Closed</li>
                                        </ul>
                                </strong>
                            </div>
                            <div class="oe_kanban_card_header_title">
                                Capacity:
                                <span t-esc="record.capacity.value"/>
                            </div>

                            <div class="mt-2">
                                <strong>
                                    Available Capacity:
                                    <span t-esc="record.available_capacity.value" class="text-success"/>
                                </strong>

                            </div>
                        </div>
                        <hr/>
                        <div class="oe_kanban_card_content mt-4 d-flex justify-content-around">
                             <span class="btn btn-success"
                                   >Edite</span>
                            <span class="btn btn-warning"
                                      >Delete</span>
                            <span class="btn btn-primary"
                                  >Details</span>
                        </div>
                        <hr/>
                    </div>
                </t>
            </templates>
        </kanban>
    </field>
</record>

    <record id="action_department_list" model="ir.actions.act_window">
        <field name="name">Department List</field>
        <field name="res_model">hms.department</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="action_department_kanban" model="ir.actions.act_window">
        <field name="name">Department Kanban</field>
        <field name="res_model">hms.department</field>
        <field name="view_mode">kanban,form</field>
    </record>


    <menuitem id="menu_department_kanban" name="Departments" parent="menu_department" action="action_department_kanban"/>
    <menuitem id="menu_department_list" name="List" parent="menu_department" action="action_department_list"/>
</odoo>
