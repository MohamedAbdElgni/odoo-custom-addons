<odoo>
    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">hms.patient.form</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <form string="Patient"  class="mx-auto p-3">
                <header class="">
                    <button
                            string="Undetermined"
                            type="object"
                            class="btn-primary"
                            name="action_undetermined"
                            invisible="states == 'undetermined'"/>
                    />
                    <button
                            string="Good"
                            type="object"
                            class="btn-success"
                            name="action_good"
                            invisible="states == 'good'"/>
                    />
                    <button
                            string="Fair"
                            type="object"
                            class="btn-secondary"
                            name="action_fair"
                            invisible="states == 'fair'"/>
                    />
                    <button string="Serious"
                            type="object"
                            class="btn-danger"
                            name="action_serious"
                            invisible="states == 'serious'"/>
                    />
                    <field name="states" widget="statusbar" />
                </header>
                <sheet class="">
                    <group>
                        <group string="Personal Information">
                            <field name="first_name"/>
                            <field name="last_name"/>
                            <field name="birth_date"/>
                            <field name="address"/>
                            <field name="age"/>
                            <field name="image" widget="image" class="oe_avatar" size="100,100"/>
                        </group>
                        <group string="Medical Information">
                            <field name="blood_type"/>
                            <field name="pcr"/>
                            <field name="cr_ratio" />
                            <field name="history" invisible="age &lt; 50"/>

                        </group>
                        <group string="Department Information">
                            <field name="department_id"/>
                            <field name="department_capacity" string="Department Capacity"/>

                            <field name="doctor_id" readonly="department_id==False"/>

                        </group>
                      </group>
                    <notebook>
                        <page string="History" name="log">
                            <group>
                                <field name="log" widget="one2many_list">
                                    <tree string="History">
                                        <field name="date"/>
                                        <field name="description"/>
                                        <field name="created_by"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
   </record>
    <record id="view_patient_tree" model="ir.ui.view">

        <field name="name">hms.patient.tree</field>
        <field name="model">hms.patient</field>
        <field name="arch" type="xml">
            <tree string="Patients" class="border mx-auto p-3 shadow" >
                <field name="first_name"/>
                <field name="last_name"/>
                <field name="birth_date"/>
                <field name="address"/>
                <field name="age"/>
                <field name="blood_type"/>
                <field name="states" widget="badge"
                            decoration-danger="states == 'serious'"
                            decoration-warning="states == 'fair'"
                            decoration-info="states == 'good'"
                />
                <field name="department_id"/>
                <field name="department_capacity" string="Department Capacity"/>
                <field name="doctor_id"/>
            </tree>
        </field>
    </record>
    <record id="action_patient" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hms.patient</field>
        <field name="view_mode">tree,form</field>
    </record>
    <menuitem id="menu_patient_list" name="Patient List" parent="menu_patient" action="action_patient"/>
</odoo>

