<odoo>
    <record id="view_ticket_form" model="ir.ui.view">
        <field name="name">todo.app.ticket.form</field>
        <field name="model">todo.app.ticket</field>
        <field name="arch" type="xml">
            <form string="Ticket">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="number"/>
                        <field name="tag"/>
                        <field name="state"/>
                    </group>
                    <group>
                        <field name="file" filename="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_ticket_tree" model="ir.ui.view">
        <field name="name">todo.app.ticket.tree</field>
        <field name="model">todo.app.ticket</field>
        <field name="arch" type="xml">
            <tree string="Tickets">
                <field name="name"/>
                <field name="number"/>
                <field name="tag"/>
                <field name="state"/>
            </tree>
        </field>
    </record>

    <record id="action_ticket" model="ir.actions.act_window">
        <field name="name">Tickets</field>
        <field name="res_model">todo.app.ticket</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_ticket" name="Tickets" parent="menu_todo" action="action_ticket"/>
</odoo>
